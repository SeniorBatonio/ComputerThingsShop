<UserControl x:Class="ComputerThingsShop.UserControls.ComponentItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerThingsShop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="650">
    <Grid Background="White" Height="100" Width="640">
        <Image Name="ComponentPhoto" Width="60" Height="60" Margin="20,20,570,20"/>
        <StackPanel Margin="100,10,10,10" HorizontalAlignment="Left">
            <TextBlock Text="Brand" Name="Brand" Height="30" Width="500" FontSize="20" />
            <TextBlock Text="Model" Name="Model" Height="30" Width="500" FontSize="20" />
            <TextBlock Text="Price" Name="Price" Height="30" Width="500" FontSize="15" />
        </StackPanel>
    </Grid>
</UserControl>
