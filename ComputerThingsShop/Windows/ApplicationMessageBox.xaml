<Window x:Class="ComputerThingsShop.Windows.ApplicationMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerThingsShop.Windows"
        mc:Ignorable="d"
        Title="ApplicationMessageBox" Height="150" Width="350" Background="{x:Null}" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Topmost="True">
    <Border CornerRadius="20" Background="#FF454545">
        <StackPanel Margin="20" HorizontalAlignment="Center">
            <TextBlock Name="Message" Foreground="White" FontSize="30" Height="70" VerticalAlignment="Center" HorizontalAlignment="Center" Width="310" MaxWidth="310" MaxHeight="70"/>
            <Button Name="OkButton" Content="OK" Foreground="White"  Background="Gray" Height="30" Width="150" Margin="10" FontSize="20"/>
        </StackPanel>
    </Border>
</Window>
